/**
 * Core Philosophy: This ruleset enforces a strict user-ownership security model.
 * All data is segregated by user, ensuring that by default, users can only access their own information.
 *
 * Key Security Decisions:
 * - User Isolation: Users are strictly confined to their own data.
 * - User Enumeration Disabled: Listing the top-level `/users` collection is forbidden.
 * - Shared Access for Sessions: `whatsappSessions` can be accessed by their `ownerId`.
 * - Default Deny: Any operation not explicitly granted is denied.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions for cleaner, more maintainable rules.
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isExistingDoc() {
      return resource != null;
    }

    function isOwnerOfExistingDoc(userId) {
      return isOwner(userId) && isExistingDoc();
    }

    function isSessionOwner(sessionId) {
      return isSignedIn() && get(/databases/$(database)/documents/whatsappSessions/$(sessionId)).data.ownerId == request.auth.uid;
    }

    function isResourceOwner() {
      return isSignedIn() && resource.data.ownerId == request.auth.uid;
    }
    
    function newDocHasCorrectOwner(userId) {
      return request.resource.data.userId == userId;
    }

    function ownerIsImmutable() {
      return request.resource.data.userId == resource.data.userId;
    }

    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isOwnerOfExistingDoc(userId) && request.resource.data.id == resource.data.id;
      allow delete: if false;
    }

    match /whatsappSessions/{sessionId} {
      allow read: if isResourceOwner();
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      // Allow external process to update QR and status, but only owner can change other fields
      allow update: if (isResourceOwner() && request.resource.data.ownerId == request.auth.uid) || (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['qr', 'isReady', 'updatedAt']));
      allow delete: if isResourceOwner();
    }

    match /whatsappSessions/{sessionId}/chats/{chatId} {
      allow get, list, create, update, delete: if isSessionOwner(sessionId);
    }

    match /whatsappSessions/{sessionId}/chats/{chatId}/messages/{messageId} {
      allow get, list, create, update, delete: if isSessionOwner(sessionId);
    }
    
    match /users/{userId}/bots/{botId} {
      allow get, list: if isOwner(userId);
      allow create: if isOwner(userId) && newDocHasCorrectOwner(userId);
      allow update: if isOwnerOfExistingDoc(userId) && ownerIsImmutable();
      allow delete: if isOwnerOfExistingDoc(userId);
    }

    match /users/{userId}/contacts/{contactId} {
      allow get, list: if isOwner(userId);
      allow create: if isOwner(userId) && newDocHasCorrectOwner(userId);
      allow update: if isOwnerOfExistingDoc(userId) && ownerIsImmutable();
      allow delete: if isOwnerOfExistingDoc(userId);
    }

    match /users/{userId}/conversations/{conversationId} {
      allow get, list: if isOwner(userId);
      allow create: if isOwner(userId) && newDocHasCorrectOwner(userId);
      allow update: if isOwnerOfExistingDoc(userId) && ownerIsImmutable();
      allow delete: if isOwnerOfExistingDoc(userId);
    }

    match /users/{userId}/categories/{categoryId} {
      allow get, list: if isOwner(userId);
      allow create: if isOwner(userId) && newDocHasCorrectOwner(userId);
      allow update: if isOwnerOfExistingDoc(userId) && ownerIsImmutable();
      allow delete: if isOwnerOfExistingDoc(userId);
    }
  }
}
